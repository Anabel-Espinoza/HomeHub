<div class="dashboard-styles">
    <header>
        <h1 class="is-size-2 has-text-centered m-4">{{name}}'s Dashboard</h1>
    </header>

    <hr>

    <div class="columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">

        <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
            <div class="is-one-fifths column card">
                <div class="card-image">
                    <figure>
                        <a href="/landlord/properties">
                            <img src="/images/rental01.png" alt="properties-icon" style="height:200px;width:200px;">
                        </a>
                    </figure>
                </div>
                <div class="content">
                    <p class="title is-6">Your Properties</p>
                </div>
            </div>
        </div>

        <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
            <div class="is-one-fifths column card">
                <div class="card-image">
                    <figure>
                        <a href="/landlord/maintenance">
                            {{#if open_tickets}}
                            <img src="/images/maintenance-icon-status.png" alt="maintenance icon open"
                                style="height:200px;width:200px;">

                            {{else}}
                            <img src="/images/maintenance-icon.png" alt="maintenance icon closed"
                                style="height:200px;width:200px;">
                            {{/if}}
                        </a>
                    </figure>
                </div>
                <div class="content">
                    <p class="title is-6">Maintenance Tickets</p>
                </div>
            </div>
        </div>

        <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
            <div class="is-one-fifths column card">
                <div class="card-image">
                    <figure>
                        <a href="/landlord/posts">
                            <img src="/images/mail-icon-01.png" alt="properties-icon" style="height:200px;width:200px;">
                        </a>
                    </figure>
                </div>
                <div class="content">
                    <p class="title is-6">Your Messages</p>
                </div>
            </div>
        </div>

        <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
            <div class="is-one-fifths column card">
                <div class="card-image">
                    <figure>
                        <a href="/landlord/account">
                            <img src="/images/update-profile-icon.png" alt="add-ticket-icon"
                                style="height:200px;width:200px;">
                        </a>
                    </figure>
                </div>
                <div class="content">
                    <p class="title is-6">Update Your Profile</p>
                </div>
            </div>
        </div>

    </div>
</div>