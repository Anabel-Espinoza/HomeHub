<div class="login-signup-form is-flex is-justify-content-center is-align-items-center">
    <form class="box column is-half form signup-form">
        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" type="email" id="email-signup" placeholder="e.g. johndoe@example.com">
            </div>
        </div>

        <div class="form-group">
            <label class="label">Name:</label>
            <div class="control">
                <input class="input" type="text" id="name-signup">
            </div>
        </div>

        <div class="field">
            <label class="label">Password</label>
            <div class="control">
                <input class="input" type="password" id="password-signup" placeholder="********">
            </div>
        </div>

        <button class="button is-black">Sign Up</button>
        <p class="p-2">Already a member?<a href="/login"> Login</a></p>
    </form>
</div>

<script src="./js/signup.js"></script>