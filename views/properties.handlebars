<div class="background-PMU">
  <header>
    <h1 class="is-size-2 has-text-centered p-4 has-text-black">My Properties</h1>
  </header>

  {{#if units.length}}
  <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
    {{#each units as |unit|}}

    <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
      <div class="is-one-fifths column card">
        <div class="card-image">
          <figure>
            <a href="/landlord/unit/{{unit.id}}">
              <img src="/images/rental01.png" onerror="javascript:this.src='/images/rental01.png'" class="bing-address"
                id="{{unit.address}}" alt="rental property image or icon" style="height:200px;width:200px;">
            </a>
          </figure>
        </div>
        <div class="content">
          <p class="title is-6">{{unit.address}}</p>
        </div>
      </div>
    </div>

    {{/each}}
  </div>
  {{/if}}

  <div class="columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">

    <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
      <div class="is-one-fifths column card">
        <div class="card-image">
          <figure>
            <a class="js-modal-trigger" data-target="modal-property-create">
              <img src="/images/add-unit-01.png" alt="rent-icon" style="height:200px;width:200px;">
            </a>
          </figure>
        </div>
        <div class="content">
          <p class="title is-6">Add Property<br>{{unit.address}}</p>
        </div>
      </div>
    </div>

    <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
      <div class="is-one-fifths column card">
        <div class="card-image">
          <figure>
            <a class="js-modal-trigger" data-target="modal-tenant-create">
              <img src="/images/add-tenant-01.png" alt="add tenant icon" style="height:200px;width:200px;">
            </a>
          </figure>
        </div>
        <div class="content">
          <p class="title is-6">Invite Tenant<br>{{unit.address}}</p>
        </div>
      </div>
    </div>

  </div>

  {{!-- modal for add property --}}
  <div id="modal-property-create" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <div class="card" style="width=300px;">
        {{!-- add to a model after clicking 'create tenant account' ?? --}}
        <h2 class="log-header is-size-4 has-text-centered mt-4">Create Rental Property</h2>
        <div class="column is-4 is-offset-4">
          <form class="form new-property-form centered">
            <div class="form-group m-2">
              <label class="label">Address:</label>
              <div class="control">
                <input class="form-input" type="text" id="prop-address"
                  placeholder="123 Main Street, Atlanta, GA 30332">
              </div>
            </div>
            <div class="form-group m-2">
              <label class="label">Monthly Rent:</label>
              <div class="control">
                <input class="form-input" type="number" id="prop-rent" placeholder="$X.XX">
              </div>
            </div>
            <div class="form-group m-2">
              <button class="btn button is-black new-property-form" type="submit" id="prop-submit-btn">Submit</button>
              <button class="button is-black close-btn">Close</button>
            </div>
          </form>
        </div>


      </div>
    </div>
    <button class="modal-close" aria-label="close"></button>
  </div>


  {{!-- modal for create tenant --}}
  <div id="modal-tenant-create" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <div class="card" style="width=300px;">
        {{!-- add to a model after clicking 'create tenant account' ?? --}}
        <h2 class="log-header is-size-4 has-text-centered mt-4">Create Tenant Account</h2>
        <div class="column is-4 is-offset-4">
          <form class="form signup-form centered">
            <div class="form-group m-2">
              <label class="label">Email:</label>
              <div class="control has-icons-left has-icons-right">
                <input class="form-input is-danger" type="email" id="email-signup" placeholder="e.g. email@example.com">
              </div>
            </div>
            <div class="form-group m-2">
              <label class="label">Name:</label>
              <div class="control">
                <input class="form-input" type="text" id="name-signup" placeholder="Your Name">
              </div>
            </div>
            <div class="form-group m-2">
              <label class="label">Password:</label>
              <div class="control">
                <input class="form-input" type="password" id="password-signup" placeholder="********">
              </div>
            </div>

            <div class="form-group m-2">
              <button class="btn button is-black signup-form" type="submit" id="login-btn">Submit</button>
              <button class="button is-black close-btn">Close</button>
            </div>
          </form>
        </div>


      </div>
    </div>
    <button class="modal-close" aria-label="close"></button>
  </div>
</div>

<script src="/js/properties.js"></script>
<script src="/js/new-tenant.js"></script>
<script src="/js/bing.js"></script>