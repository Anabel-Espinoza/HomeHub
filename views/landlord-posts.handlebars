<header>
    <h3 class="is-size-2 has-text-centered m-4">Your Messages</h3>
</header>

{{#if convo.length}}
{{#each convo as |conv| }}
<div class="m-2"><strong>{{conv.content}}</strong> - (between {{conv.landlord.name}} and {{conv.tenant.name}}, {{format_date conv.date_submitted}})</div><br>
    {{#if conv.comments}}
        {{> comments}}
    {{/if}}
    <button data-id="{{conv.id}}" class="js-comment-trigger is-black button" data-target="modal-comment-form">Add comment</button>

<div class="modal" id="modal-comment-form">
    <div class="modal-background"></div>
    <div class="modal-content has-background-white py-5 px-5">
        <h2 class="log-header is-size-4 has-text-centered mt-4">Add a comment</h2>
        <form class="box column form update-form">
            <div class="field">
                <label class="label">Comment:</label>
                <div class="control">
                    <input class="input" type="text" id="content">
                </div>
            </div>
            <button class="button is-black comment-btn" data-landlord-id="{{conv.landlord_id}}" data-convo-id="{{conv.id}}">Post</button>
            <button class="button is-black close-btn">Close</button>
            <button class="modal-close is-black button">Close</button>
        </form>
    </div>
</div>

{{/each}}

{{else}}

<h2 class="is-size-4 has-text-gray has-text-centered">~You have no Messages~</h2>

{{/if}}

<script src="/js/new-comment-landlord.js"></script>
