<div class="modal" id="modal-new-ticket">
    <div class="modal-background"></div>
    <div class="modal-content has-background-white py-5 px-5">
        <form class="box column form update-form">
            <div class="field">
                <label class="label">Problem Description</label>
                <div class="control">
                    <input class="input maint-desc textarea" type="text"
                        placeholder="Enter a description of the issue you're having">
                </div>
            </div>
            <button class="maint-submit-btn btn button is-black is-medium m-3" data-unit-id="{{unit.id}}"
                data-landlord-id="{{unit.landlord_id}}" data-tenant-id="{{unit.tenant_id}}">Submit</button>
            <button class="modal-close is-black button">Close</button>
        </form>
    </div>
</div>

<div class="modal" id="modal-update-form">
    <div class="modal-background"></div>
    <div class="modal-content has-background-white py-5 px-5">
        <form class="box column form update-form">
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" type="email" id="email-update" placeholder="{{email}}">
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="password" id="password-update" placeholder="********">
                </div>
            </div>

            <button class="button is-black update-btn" data-tenant-id="{{id}}">Update</button>
            <button class="button is-black close-btn">Close</button>
        </form>
    </div>
</div>

{{else}}

<h3 class="is-size-5 has-text-centered m-4">-- No unit assigned --</h3>


{{/if}}



