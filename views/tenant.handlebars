<h1 class="is-size-2 has-text-centered m-4">Welcome, {{name}}</h1>

{{#if unit}}
<div class="columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">

    <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
        <div class="is-one-fifths column card">
            <div class="card-image">
                <figure>
                    <a href="/tenant/unit/{{unit.id}}">
                        <img src="/images/rental01.png" alt="rent-icon" style="height:200px;width:200px;">
                    </a>
                </figure>
            </div>
            <div class="content">
                <p class="title is-6">Your Unit:<br>{{unit.address}}</p>
            </div>
        </div>
    </div>

    <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
        <div class="is-one-fifths column card">
            <div class="card-image">
                <figure>
                    <a href="/tenant/maintenance/{{unit.id}}">
                        <img src="/images/maintenance-icon.png" alt="maintenance-icon"
                            style="height:200px;width:200px;">
                    </a>
                </figure>
            </div>
            <div class="content">
                <p class="title is-6">Your Maintenance Tickets</p>
            </div>
        </div>
    </div>

    <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
        <div class="is-one-fifths column card">
            <div class="card-image">
                <figure>
                    <a class="js-modal-trigger" data-target="modal-new-ticket">
                        <img src="/images/add-ticket-icon.png" alt="add-ticket-icon" style="height:200px;width:200px;">
                    </a>
                </figure>
            </div>
            <div class="content">
                <p class="title is-6">Add Maintenance Ticket</p>
            </div>
        </div>
    </div>

    <div class="card-body columns is-flex is-flex-wrap-wrap is-justify-content-space-around m-5">
        <div class="is-one-fifths column card">
            <div class="card-image">
                <figure>
                    <a class="js-update-trigger" data-target="modal-update-form">
                        <img src="/images/add-ticket-icon.png" alt="add-ticket-icon" style="height:200px;width:200px;">
                    </a>
                </figure>
            </div>
            <div class="content">
                <p class="title is-6">Update Your Profile</p>
            </div>
        </div>
    </div>
</div>

