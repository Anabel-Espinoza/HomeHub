<div class="login-signup">
    <div class="login-signup-form is-flex is-justify-content-center is-align-items-center">
        <form class="box column is-half form login-form">
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input form-input" type="email" id="email-login"
                        placeholder="e.g. johndoe@example.com">
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="password" placeholder="********" id="password-login">
                </div>
            </div>

            <div class="m-2">
                <input type="checkbox" name="tenant-check" class="tenant-check">
                <label for="tenant">Check if you are a tenant</label>
            </div>

            <button class="button is-black landlord-signin-btn">Login</button>
            <p class="p-2">Not a Member?<a href="../signup"> Signup</a></p>
        </form>

    </div>
</div>

<div class="modal success-modal has-text-centered">
    <div class="modal-background"></div>
    <div class="modal-content has-background-white py-5 px-5">
        <h3 class="is-size-4 has-text-centered">Invalid Username or Password</h3>
        <p class="is-size-4 has-text-centered">Verify Your Account Type</p>
        <button class="close-btn is-black button m-3">Close</button>
    </div>
</div>

<script src="/js/login.js"></script>